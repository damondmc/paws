    apt-get update -y
    apt-get install -y build-essential wget
    
    # install miniconda
    wget https://repo.anaconda.com/miniconda/Miniconda3-py310_23.5.2-0-Linux-x86_64.sh
    bash Miniconda3-py310_23.5.2-0-Linux-x86_64.sh -b -f -p /opt/conda
